.container
	#register-panel.jumbotron
		%h2 Register a new user
		= form_for :registration do |f|
			= f.label :name, "Name", class: "control-label"
			= f.text_field :name, class: "form-control", placeholder: "Name"
			= f.label :email, "E-mail address", class: "control-label"
			= f.text_field :email, class: "form-control", placeholder: "E-mail address"
			= f.label :email_confirmation, "E-mail address confirmation", class: "control-label"
			= f.text_field :email_confirmation, class: "form-control", placeholder: "E-mail address confirmation"
			= f.label :password, "Password", class: "control-label"
			= f.password_field :password, class: "form-control", placeholder: "Password"
			= f.label :password_confirmation, "Password confirmation", class: "control-label"
			= f.password_field :password_confirmation, class: "form-control", placeholder: "Password confirmation"
			= f.submit class: "btn btn-success", value: "Register" 
